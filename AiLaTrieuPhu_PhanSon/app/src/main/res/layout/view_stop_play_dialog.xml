<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBgMng"
    android:gravity="top|center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_70"
        android:background="#001A67"
        android:padding="20dp"
        android:text="Dừng cuộc chơi "
        android:textColor="@color/colorWhile"
        android:textSize="@dimen/d_20"
        android:textStyle="bold"
        tools:ignore="SpUsage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#071549"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/d_30">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d_20"
            android:layout_marginTop="@dimen/d_30"
            android:layout_marginEnd="@dimen/d_20">

            <EditText
                android:id="@+id/edt_name_user"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/colorWhile"
                android:hint="Nhập tên "
                android:padding="@dimen/d_10"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/d_18"
                tools:ignore="SpUsage" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d_20"
            android:layout_marginTop="@dimen/d_30"
            android:layout_marginEnd="@dimen/d_20"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/d_150"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radius_tangle"
                android:gravity="center"
                android:padding="10dp"
                android:text="Hủy bỏ"
                android:textColor="@color/colorWhile"
                android:textSize="@dimen/d_15"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_accept"
                android:layout_width="@dimen/d_150"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d_30"
                android:background="@drawable/bg_radius_tangle"
                android:gravity="center"
                android:padding="10dp"
                android:text="Đồng ý"
                android:textColor="@color/colorWhile"
                android:textSize="@dimen/d_15"
                tools:ignore="SpUsage" />

        </TableRow>
    </LinearLayout>
</LinearLayout>