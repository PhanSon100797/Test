<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/player_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="@dimen/d_30"
            android:text="Hight Score"
            android:textColor="@color/colorWhile"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="@dimen/d_20">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/rank_1" />

            <TextView
                android:id="@+id/tv_user_top_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Name1"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/d_20"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_money_top_1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:text="150.000.000 VND"
                android:textColor="@color/colorYellow"
                android:textSize="@dimen/d_20"
                tools:ignore="SpUsage" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="@dimen/d_20">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/rank_2" />

            <TextView
                android:id="@+id/tv_user_top_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Name2"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/d_20"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_money_top_2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:text="150.000.000 VND"
                android:textColor="@color/colorYellow"
                android:textSize="@dimen/d_20"
                tools:ignore="SpUsage" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="@dimen/d_20">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/rank_3" />

            <TextView
                android:id="@+id/tv_user_top_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Name3"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/d_20"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_money_top_3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:text="150.000.000 VND"
                android:textColor="@color/colorYellow"
                android:textSize="@dimen/d_20"
                tools:ignore="SpUsage" />
        </TableRow>


    </LinearLayout>


</FrameLayout>