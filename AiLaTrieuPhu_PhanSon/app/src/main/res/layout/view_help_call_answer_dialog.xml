<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparent"
    android:orientation="vertical"
    android:paddingStart="@dimen/d_20"
    android:paddingEnd="@dimen/d_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_30"
        android:background="@drawable/player_layout_help_call_audience_background"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_help_call_answer"
                android:layout_width="@dimen/d_80"
                android:layout_height="@dimen/d_80"
                android:src="@drawable/bg_state_help_call1" />

            <TextView
                android:id="@+id/tv_help_call_who"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_state_help_call1"
                android:text="Bác sĩ"
                android:textColor="@color/colorWhile"
                android:textSize="@dimen/d_15" />

            <TextView
                android:id="@+id/tv_answer_help_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_30"
                android:src="@drawable/bg_state_help_call1"
                android:text="@string/help_call_answer_c"
                android:textColor="@color/colorYellow"
                android:textSize="@dimen/d_25"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_answer_help_call_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_50"
                android:background="@drawable/bg_confirm_background_button"
                android:gravity="center"
                android:src="@drawable/bg_state_help_call1"
                android:text="Đóng"
                android:textColor="@color/colorWhile"
                android:textSize="@dimen/d_20" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_layout_help_call_title_background"
        android:gravity="center"
        android:text="Ý kiến chuyên gia"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/d_15"
        android:textStyle="bold" />
</FrameLayout>